<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="StudentTables" targetRuntime="MyBatis3">
        <!--插件定义-->
        <plugin type="org.mybatis.generator.plugins.FluentBuilderMethodsPlugin" />
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin" />

        <!--jdbc连接-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/mall_db"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <!--映射的实体类-->
        <javaModelGenerator targetPackage="com.sl.homework.week0602.model"
                            targetProject="./src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!--mapper生成的位置-->
        <sqlMapGenerator targetPackage="com.sl.homework.week0602.mapper"
                         targetProject="./src/main/resources/mapper">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!--生成的模式-->
        <javaClientGenerator type="MIXEDMAPPER"
                             targetPackage="com.sl.homework.week0602.mapper"
                             targetProject="./src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!--表与实体类映射关系-->
        <table tableName="tb_order" domainObjectName="Order" >
            <generatedKey column="order_id" sqlStatement="CALL IDENTITY()" identity="true" />
            <columnOverride column="order_sn" property="orderSN" javaType="java.lang.String" jdbcType="VARCHAR"/>
            <columnOverride column="user_id" property="userId" javaType="java.lang.Long" jdbcType="BIGINT"/>
            <columnOverride column="business_id" property="businessId" javaType="java.lang.Long" jdbcType="BIGINT"/>
            <columnOverride column="product_snapshot" property="productSnapshot" javaType="java.lang.String" jdbcType="VARCHAR"/>
            <columnOverride column="pay_amount" property="payAmount" javaType="java.math.BigDecimal" jdbcType="DECIMAL"/>
            <columnOverride column="order_status" property="orderStatus" javaType="java.lang.Integer" jdbcType="INT"/>
            <columnOverride column="note" property="note" javaType="java.lang.String" jdbcType="VARCHAR"/>
            <columnOverride column="delete_status" property="deleteStatus" javaType="java.lang.Integer" jdbcType="INT"/>
            <columnOverride column="payment_time" property="paymentTime" javaType="" jdbcType="DATETIME"/>
            <columnOverride column="modify_time" property="modifyTime" javaType="" jdbcType="DATETIME"/>
            <columnOverride column="create_time" property="createTime" javaType="" jdbcType="DATETIME"/>
        </table>
    </context>
</generatorConfiguration>
